<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button

                android:id="@+id/button_build_armorStand"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Armor Stand (a)" />

            <Button
                android:id="@+id/button_build_bed"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Bed (b)" />

            <Button
                android:id="@+id/button_build_seat"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Seat (c)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_burial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Burial Receptacle (n)" />

            <Button
                android:id="@+id/button_build_door"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Door (d)" />

            <Button
                android:id="@+id/button_build_floodgate"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Floodgate (x)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_floorHatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Floor Hatch (H)" />

            <Button
                android:id="@+id/button_build_wallGrate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Wall Grate (W)" />

            <Button
                android:id="@+id/button_build_floorGrate"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Floor Grate (G)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_verticalBars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Vertical Bars (B)" />

            <Button
                android:id="@+id/button_build_floorBars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Floor Bars (Alt+b)" />

            <Button
                android:id="@+id/button_build_cabinet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cabinet (f)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Container (h)" />

            <Button
                android:id="@+id/button_build_kennels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Kennels (k)" />

            <Button
                android:id="@+id/button_build_farmPlot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Farm Plot (p)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_weaponRack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Weapon Rack (r)" />

            <Button
                android:id="@+id/button_build_statue"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Statue (s)" />

            <Button
                android:id="@+id/button_build_slab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Slab (Alt+s)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Table (t)" />

            <Button
                android:id="@+id/button_build_pavedRoad"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Paved Road (o)" />

            <Button
                android:id="@+id/button_build_dirtRoad"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Dirt Road (O)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_bridge"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Bridge (g)" />

            <Button
                android:id="@+id/button_build_well"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Well (l)" />

            <Button
                android:id="@+id/button_build_siegeEngines"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Siege Engines (i)" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_workshops"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Workshops (w)" />

            <Button
                android:id="@+id/button_build_furnaces"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Furnaces (e)" />

            <Button
                android:id="@+id/button_build_glassWindow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Glass Window (y)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_gemWindow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Gem Window (Y)" />

            <Button
                android:id="@+id/button_build_wall"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Wall (C)" />

            <Button
                android:id="@+id/button_build_tradeDepot"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Trade Depot (D)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_traps"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Traps (T)" />

            <Button
                android:id="@+id/button_build_machineComponents"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Machine Components (M)" />

            <Button
                android:id="@+id/button_build_instrument"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Instrument (I)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_support"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Support (S)" />

            <Button
                android:id="@+id/button_build_animalTrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Animal Trap (m)" />

            <Button
                android:id="@+id/button_build_restraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Restraint (v)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_cage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Cage (j)" />

            <Button
                android:id="@+id/button_build_archeryTarget"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Archery Target (A)" />

            <Button
                android:id="@+id/button_build_tractionBench"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Traction Bench (R)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_nestBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Nest Box (N)" />

            <Button
                android:id="@+id/button_build_hive"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Hive (Alt+h)" />

            <Button
                android:id="@+id/button_build_bookcase"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Bookcase (Alt+c)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_build_displayFurniture"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:text="Display Furniture (F)" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>