<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_upKey"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:text="UP" />

    <Button
        android:id="@+id/button_leftKey"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button_upKey"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:text="LEFT"/>

    <Button
        android:id="@+id/button_rightKey"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button_upKey"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:text="RIGHT"/>

    <Button
        android:id="@+id/button_downKey"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button_upKey"
        android:layout_toRightOf="@id/button_leftKey"
        android:layout_toLeftOf="@id/button_rightKey"
        android:text="DOWN"/>

    <Button
        android:id="@+id/button_plusKey"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button_leftKey"
        android:layout_marginTop="20dp"
        android:text=""/>


</RelativeLayout>